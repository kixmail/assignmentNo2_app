@model VehicleCRUD.Models.VehicleMappingData

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3 my-3 border">
    <h1> @ViewBag.PageName</h1>

    <div class="row">
        <div class="col-sm-12">
            <hr />
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6">
                        <h3>Vehicle Information</h3>
                        @if (@ViewBag.IsEdit)
                        {
                            <input type="hidden" asp-for="VehicleId" />
                        }

                        <div class="form-group">
                            <label asp-for="Make" class="control-label"></label>
                            <input asp-for="Make" class="form-control" />
                            <span asp-validation-for="Make" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Model" class="control-label"></label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ChassisNo" class="control-label"></label>
                            <input asp-for="ChassisNo" class="form-control" />
                            <span asp-validation-for="ChassisNo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Year" class="control-label"></label>
                            <input asp-for="Year" class="form-control" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DrivingType" class="control-label"></label>
                            <input asp-for="DrivingType" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <h3>Vehicle Details</h3>
                        <div class="form-group">
                            <label asp-for="Grade" class="control-label"></label>
                            <input asp-for="Grade" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Colour" class="control-label"></label>
                            <input asp-for="Colour" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Engine" class="control-label"></label>
                            <input asp-for="Engine" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Transmission" class="control-label"></label>
                            <input asp-for="Transmission" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="ExtrasInfo" class="control-label"></label>
                            <input asp-for="ExtrasInfo" class="form-control" />

                        </div>
                    </div>

                </div>





                <hr />




                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Save" />
                    <a class="btn btn-danger" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}